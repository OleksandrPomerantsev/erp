<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
	    <record model="ir.actions.act_window" id="action_plane_aeroport_tree">
		    <field name="name">Aeroport</field>
		    <field name="res_model">plane.aeroport</field>
            <field name="view_mode">tree,form,kanban</field>
	    </record>

        <record model="ir.actions.act_window" id="action_plane_vol_tree">
		    <field name="name">Vol</field>
		    <field name="res_model">plane.vol</field>
            <field name="view_mode">tree,form,kanban</field>
	    </record>

        <record model="ir.actions.act_window" id="action_plane_avio_tree">
		    <field name="name">Avio</field>
		    <field name="res_model">plane.avio</field>
            <field name="view_mode">tree,form,kanban</field>
	    </record>

        <record model="ir.actions.act_window" id="action_plane_pilot_tree">
		    <field name="name">Pilot</field>
		    <field name="res_model">plane.pilot</field>
            <field name="view_mode">tree,form,kanban</field>
	    </record>

        <menuitem name="Plane" id="plane_menu" />
        <menuitem name="Aeroport" parent="plane_menu" id="plane_menu_1" action="action_plane_aeroport_tree" />
	    <menuitem name="Vol" parent="plane_menu" id="plane_menu_2" action="action_plane_vol_tree" />	
	    <menuitem name="Avio" parent="plane_menu" id="plane_menu_3" action="action_plane_avio_tree" />	
        <menuitem name="Pilot" parent="plane_menu" id="plane_menu_4" action="action_plane_pilot_tree" />	

        <record model="ir.ui.view" id="view_plane_aeroport_tree">
            <field name="name">plane_aeroport</field>
            <field name="model">plane.aeroport</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Aeroport">
                    <field name="nom"/>
                    <field name="ciutat"/>
                    <field name="pais"/>		
                </tree>
            </field>
	    </record>

        <record model="ir.ui.view" id="view_plane_aeroport_form">
            <field name="name">plane_aeroport</field>
            <field name="model">plane.aeroport</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Form Aeroport">
                    <sheet>
                        <group col="12">
                            <group colspan="6">
                                <field name="image" class="oe_avatar" widget="image"/>
                            </group>
                            <group colspan="6">
                                <field name="nom"/>
                                <field name="ciutat"/>
                                <field name="pais"/>
                                <field name="latitud"/>
                                <field name="longitud"/>
                            </group>
                            <group colspan="12">
                                <field name="aeroportDesti_ids"/>
                                <field name="aeroportOrigen_ids"/>
                            </group>
                            
                        </group>
                    </sheet>
                </form>
            </field>
	    </record>

        <record model="ir.ui.view" id="view_plane_aeroport_kanban">
            <field name="name">plane_aeroport.kanban</field>
            <field name="model">plane.aeroport</field>
            <field name="type">kanban</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="nom"/>
                    <field name="image"/>
                    <field name="id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_content o_kanban_record_has_image_fill">
                                <div class="oe_kanban_card o_kanban_image d-none d-md-block" 
                                    t-attf-style="background-image:url('#{kanban_image('plane.aeroport', 'image', record.id.raw_value, placeholder)}')">
                                </div>
                                <div class="oe_kanban_card_content">
                                    <div class="oe_kanban_card_header">
                                        <div class="oe_kanban_card_title">
                                            <field name="nom"/>
                                        </div>
                                    </div>
                                    <div class="oe_kanban_card_body">
                                        <field name="ciutat"/>
                                        <field name="pais"/>
                                        <field name="latitud"/>
                                        <field name="longitud"/>
                                        <field name="aeroportDesti_ids"/>
                                        <field name="aeroportOrigen_ids"/>        
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record model="ir.ui.view" id="view_plane_vol_tree">
            <field name="name">plane_vol</field>
            <field name="model">plane.vol</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Vol">
                    <field name="passatgers"/>
                    <field name="dataSortida"/>
                    <field name="dataArrivada"/>	
                </tree>
            </field>
	    </record>

        <record model="ir.ui.view" id="view_plane_vol_form">
            <field name="name">plane_vol</field>
            <field name="model">plane.vol</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Form Vol">
                    <sheet>
                        <group col="12">
                            <group colspan="6">
                                <field name="image" class="oe_avatar" widget="image"/>
                            </group>
                            <group colspan="6">
                                <field name="aeroportDesti"/>
                                <field name="aeroportOrigen"/>
                                <field name="passatgers" />
                                <field name="dataSortida"/>
                                <field name="dataArrivada"/>
                            </group>
                            <group colspan="12">
                                <field name="pilot_id"/>
                                <field name="avio_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
	    </record>

        <record model="ir.ui.view" id="view_plane_vol_kanban">
            <field name="name">plane_vol.kanban</field>
            <field name="model">plane.vol</field>
            <field name="type">kanban</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <field name="image"/>
                    <field name="id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_content o_kanban_record_has_image_fill">
                                <div class="oe_kanban_card o_kanban_image d-none d-md-block" 
                                    t-attf-style="background-image:url('#{kanban_image('plane.vol', 'image', record.id.raw_value, placeholder)}')">
                                </div>
                                <div class="oe_kanban_card_content">
                                    <div class="oe_kanban_card_header">
                                        <div class="oe_kanban_card_title">
                                            <field name="aeroportDesti"/>
                                        </div>
                                    </div>
                                    <div class="oe_kanban_card_body">
                                        <field name="aeroportOrigen"/>
                                        <field name="passatgers"/>
                                        <field name="dataSortida"/>
                                        <field name="dataArrivada"/>
                                        <field name="pilot_id"/>
                                        <field name="avio_id"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


        <record model="ir.ui.view" id="view_plane_avio_tree">
            <field name="name">plane_avio</field>
            <field name="model">plane.avio</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Avio">
                    <field name="marca"/>
                    <field name="model"/>
                    <field name="maxVel"/>	
                </tree>
            </field>
	    </record>

        <record model="ir.ui.view" id="view_plane_avio_form">
            <field name="name">plane_avio</field>
            <field name="model">plane.avio</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Form Avio">
                    <sheet>
                        <group col="12">
                            <group colspan="6">
                                <field name="image" class="oe_avatar" widget="image"/>
                            </group>
                            <group colspan="6">
                                <field name="marca"/>
                                <field name="model"/>
                                <field name="maxVel"/>
                            </group>
                            <group colspan="12">
                                <field name="vol_ids"/>
                            </group>
                        </group>
                    </sheet>	
                </form>
            </field>
	    </record>

        <record model="ir.ui.view" id="view_plane_avio_kanban">
            <field name="name">plane_avio.kanban</field>
            <field name="model">plane.avio</field>
            <field name="type">kanban</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="model"/>
                    <field name="image"/>
                    <field name="id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_content o_kanban_record_has_image_fill">
                                <div class="oe_kanban_card o_kanban_image d-none d-md-block" 
                                    t-attf-style="background-image:url('#{kanban_image('plane.avio', 'image', record.id.raw_value, placeholder)}')">
                                </div>
                                <div class="oe_kanban_card_content">
                                    <div class="oe_kanban_card_header">
                                        <div class="oe_kanban_card_title">
                                            <field name="marca"/>
                                        </div>
                                    </div>
                                    <div class="oe_kanban_card_body">
                                        <field name="model"/>
                                        <field name="maxVel"/>
                                        <field name="vol_ids"/>  
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


        <record model="ir.ui.view" id="view_plane_pilot_tree">
            <field name="name">plane_pilot</field>
            <field name="model">plane.pilot</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Pilot">
                    <field name="nom"/>
                    <field name="cognoms"/>	
                </tree>
            </field>
	    </record>

        <record model="ir.ui.view" id="view_plane_pilot_form">
            <field name="name">plane_pilot</field>
            <field name="model">plane.pilot</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Form Pilot">
                    <sheet>
                        <group col="12">
                            <group colspan="6">
                                <field name="image" class="oe_avatar" widget="image"/>
                            </group>
                            <group colspan="6">
                                <field name="nom"/>
                                <field name="cognoms"/>	
                                <field name="nif"/>
                                <field name="telf"/>
                                <field name="email"/>
                            </group>
                            <group colspan="12">
                                <field name="vol_ids"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
	    </record>

        <record model="ir.ui.view" id="view_plane_pilot_kanban">
            <field name="name">plane_pilot.kanban</field>
            <field name="model">plane.pilot</field>
            <field name="type">kanban</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="nom"/>
                    <field name="image"/>
                    <field name="id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_content o_kanban_record_has_image_fill">
                                <div class="oe_kanban_card o_kanban_image d-none d-md-block" 
                                    t-attf-style="background-image:url('#{kanban_image('plane.pilot', 'image', record.id.raw_value, placeholder)}')">
                                </div>
                                <div class="oe_kanban_card_content">
                                    <div class="oe_kanban_card_header">
                                        <div class="oe_kanban_card_title">
                                            <field name="nom"/>
                                        </div>
                                    </div>
                                    <div class="oe_kanban_card_body">
                                        <field name="cognoms"/>
                                        <field name="nif"/>
                                        <field name="telf"/>
                                        <field name="email"/>
                                        <field name="vol_ids"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
	    <record model="ir.actions.act_window" id="action_zoo_zoo_tree">
		    <field name="name">Zoo</field>
		    <field name="res_model">zoo.zoo</field>
            <field name="view_mode">tree,form,kanban</field>
	    </record>

        <record model="ir.actions.act_window" id="action_zoo_animal_tree">
		    <field name="name">Animal</field>
		    <field name="res_model">zoo.animal</field>
            <field name="view_mode">tree,form,kanban</field>
	    </record>

        <record model="ir.actions.act_window" id="action_zoo_especie_tree">
		    <field name="name">Especie</field>
		    <field name="res_model">zoo.especie</field>
            <field name="view_mode">tree,form,kanban</field>
	    </record>

        <menuitem name="Zoo" id="zoo_menu" />
        <menuitem name="Zoo" parent="zoo_menu" id="zoo_menu_1" action="action_zoo_zoo_tree" />
	    <menuitem name="Animal" parent="zoo_menu" id="zoo_menu_2" action="action_zoo_animal_tree" />	
	    <menuitem name="Especie" parent="zoo_menu" id="zoo_menu_3" action="action_zoo_especie_tree" />	

        <record model="ir.ui.view" id="view_zoo_zoo_tree">
            <field name="name">zoo_zoo</field>
            <field name="model">zoo.zoo</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Zoo">
                    <field name="nom"/>
                    <field name="ciutat"/>
                    <field name="pais"/>
                    <field name="grandaria"/>		
                </tree>
            </field>
	    </record>

        <record model="ir.ui.view" id="view_zoo_zoo_form">
            <field name="name">zoo_zoo</field>
            <field name="model">zoo.zoo</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Form Zoo">
                    <sheet>
                        <group col="12">
                            <group colspan="6">
                                <field name="image" class="oe_avatar" widget="image"/>
                            </group>
                            <group colspan="6">
                                <field name="nom" />
                                <field name="ciutat" />
                                <field name="pais" />
                                <field name="grandaria" />	
                            </group>
                            <group colspan="12">
                                <field name="animals_ids"/>
                            </group>
                        </group>
                    </sheet>	
                </form>
            </field>
	    </record>

        <record model="ir.ui.view" id="view_zoo_zoo_kanban">
            <field name="name">zoo_zoo.kanban</field>
            <field name="model">zoo.zoo</field>
            <field name="type">kanban</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <field name="image"/>
                    <field name="id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_content o_kanban_record_has_image_fill">
                                <div class="oe_kanban_card o_kanban_image d-none d-md-block" 
                                    t-attf-style="background-image:url('#{kanban_image('zoo.zoo', 'image', record.id.raw_value, placeholder)}')">
                                </div>
                                <div class="oe_kanban_card_content">
                                    <div class="oe_kanban_card_header">
                                        <div class="oe_kanban_card_title">
                                            <field name="nom"/>
                                        </div>
                                    </div>
                                    <div class="oe_kanban_card_body">
                                        <field name="ciutat"/>
                                        <field name="pais"/>
                                        <field name="grandaria"/>
                                        <field name="animals_ids"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


        <record model="ir.ui.view" id="view_zoo_animal_tree">
            <field name="name">zoo_animal</field>
            <field name="model">zoo.animal</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Animal">
                    <field name="sexe"/>
                    <field name="dataNaix"/>
                    <field name="paisOrigen"/>
                    <field name="continentOrigen"/>		
                </tree>
            </field>
	    </record>

        <record model="ir.ui.view" id="view_zoo_animal_form">
            <field name="name">zoo_animal</field>
            <field name="model">zoo.animal</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Form Animal">
                    <sheet>
                        <group col="12">
                            <group colspan="6">
                                <field name="image" class="oe_avatar" widget="image"/>
                            </group>
                            <group colspan="6">
                                <field name="sexe"/>
                                <field name="dataNaix"/>
                                <field name="paisOrigen"/>
                                <field name="continentOrigen"/>
                            </group>
                            <group colspan="12">
                                <field name="zoo_id"/>
                                <field name="especie_id" />	
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
	    </record>

        <record model="ir.ui.view" id="view_zoo_animal_kanban">
            <field name="name">zoo_animal.kanban</field>
            <field name="model">zoo.animal</field>
            <field name="type">kanban</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <field name="image"/>
                    <field name="id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_content o_kanban_record_has_image_fill">
                                <div class="oe_kanban_card o_kanban_image d-none d-md-block" 
                                    t-attf-style="background-image:url('#{kanban_image('zoo.animal', 'image', record.id.raw_value, placeholder)}')">
                                </div>
                                <div class="oe_kanban_card_content">
                                    <div class="oe_kanban_card_header">
                                        <div class="oe_kanban_card_title">
                                            <field name="sexe"/>
                                        </div>
                                    </div>
                                    <div class="oe_kanban_card_body">
                                        <field name="dataNaix"/>
                                        <field name="paisOrigen"/>
                                        <field name="continentOrigen"/>
                                        <field name="zoo_id"/>
                                        <field name="especie_id" />	
                                        <img t-if="record.image" t-att-src="record.image"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record model="ir.ui.view" id="view_zoo_especie_tree">
            <field name="name">zoo_especie</field>
            <field name="model">zoo.especie</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Especie">
                    <field name="nomVulgar"/>
                    <field name="nomCientific"/>
                    <field name="perill"/>
                    <field name="familia"/>		
                </tree>
            </field>
	    </record>

        <record model="ir.ui.view" id="view_zoo_especie_form">
            <field name="name">zoo_especie</field>
            <field name="model">zoo.especie</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Form Especie">
                    <sheet>
                        <group col="12">
                            <group colspan="6">
                                <field name="image" class="oe_avatar" widget="image"/>
                            </group>
                            <group colspan="6">
                                <field name="nomVulgar"/>
                                <field name="nomCientific" />
                                <field name="perill"/>
                                <field name="familia"/>
                            </group>
                            <group colspan="12">
                                <field name="animals_ids" />
                            </group>
                        </group>
                    </sheet>	
                </form>
            </field>
	    </record>

        <record model="ir.ui.view" id="view_zoo_especie_kanban">
            <field name="name">zoo_especie.kanban</field>
            <field name="model">zoo.especie</field>
            <field name="type">kanban</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <field name="image"/>
                    <field name="id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_content o_kanban_record_has_image_fill">
                                <div class="oe_kanban_card o_kanban_image d-none d-md-block" 
                                    t-attf-style="background-image:url('#{kanban_image('zoo.especie', 'image', record.id.raw_value, placeholder)}')">
                                </div>
                                <div class="oe_kanban_card_content">
                                    <div class="oe_kanban_card_header">
                                        <div class="oe_kanban_card_title">
                                            <field name="nomCientific"/>
                                        </div>
                                    </div>
                                    <div class="oe_kanban_card_body">
                                        <field name="nomVulgar"/>
                                        <field name="perill"/>
                                        <field name="familia"/>
                                        <field name="animals_ids"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        

    </data>
</odoo>